# Database
MONGO_URI=mongodb://localhost:27017/vitam-cms

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173

# Twilio SMS Configuration (for SMS OTP)
TWILIO_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email Configuration (for Email OTP)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@vitam.edu.in

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=vitam-cms-uploads

# Optional: For production deployment
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/vitam-cms?retryWrites=true&w=majority
